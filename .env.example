# Lite Ad Server Configuration

# Server Configuration
PORT=4000
NODE_ENV=development

# Database Configuration
DATABASE_PATH=./data/ads.db

# Google Ad Manager Configuration
# Replace with your Google Ad Manager Network ID
GAM_NETWORK_ID=22904833613

# Security Configuration (Optional)
ADMIN_USERNAME=admin
ADMIN_PASSWORD=
JWT_SECRET=your-super-secure-secret-key-change-in-production

# CORS Configuration
CORS_ORIGIN=*

# Logging
LOG_LEVEL=info

# Rate Limiting (requests per minute)
RATE_LIMIT=100
